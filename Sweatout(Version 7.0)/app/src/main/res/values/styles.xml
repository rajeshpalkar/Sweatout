<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="AppThemeSecondary" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/primaryColor</item>
        <item name="colorButtonNormal">@color/primaryLightColor</item>
    </style>

    <style name="MyPicker" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/lighetblue</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/primaryLightColor</item>
    </style>

</resources>
